{
  "moduleFileExtensions": [
    "js","json","ts"
  ],
  "testTimeout": 30000,
  "moduleNameMapper": {
    "^@mocks": "<rootDir>/_mocks_/index"
  },
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
